{{#form/auth-base title="Reset Your Password" errorMessage=errorMessage}}
  {{#if isRegistered}}
    {{#elem/panel-form
      name="success"
      heading="Success"}}
      Your password has been changed. Please log in.
    {{/elem/panel-form}}
  {{else}}
    <form {{action 'submitForm' on='submit'}}>
      {{auth-input
        type='password'
        value=newPassword
        autocomplete="new-password"
        placeholder='New Password'}}
      {{suggest-link
        suggest-text="Need an account?"
        link-name="signup"
        link-pretty="Sign Up"}}
      {{elem/button-submit loading=isProcessing}}
    </form>
  {{/if}}
{{/form/auth-base}}