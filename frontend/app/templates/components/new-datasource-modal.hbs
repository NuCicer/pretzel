
<BsModal
  @open={{true}}
  @closeTitle="Cancel"
  @submitTitle="Connect"
  @size=""
  @closeButton={{true}}
  @fade={{true}}
  @backdrop={{true}}
  @backdropClose={{true}}
  @onSubmit={{action "onConfirm"}}
  @onHidden={{action @closeNewDatasourceModal}}
  @renderInPlace={{true}}
  class="new-datasource-modal"
   as |modal|>

   <modal.header>
     <h4 class="modal-title">
       <span id="ember409" class="glyphicon glyphicon-cloud-download"></span>
      New Datasource
    </h4>
  </modal.header>

  <modal.body>
  <div class="table labelled-inputs">

      <div class="input-label">Host : Port</div>
      <input name="host" placeholder="e.g. http://localhost:5000"  autofocus="autofocus">

      <div class="input-label">User</div>
      <input name="user" placeholder="Email address">

      <div class="input-label">Password</div>
      <input name="password" type="password">

  </div>

  {{#if this.errorText}}
    <div>
      <h4>Login Failed</h4>
      {{errorText}}
    </div>
  {{/if}}

  </modal.body>

  <modal.footer>
    <BsButton @onClick={{action modal.close}}>Cancel</BsButton>
    <BsButton @type="success" @onClick={{action modal.submit}}>Connect</BsButton>
  </modal.footer>


</BsModal>>

