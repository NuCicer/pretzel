
<BsModalSimple
  @open={{true}}
  @title="New Datasource"
  @closeTitle="Cancel"
  @submitTitle="Connect"
  @size=""
  @closeButton={{true}}
  @fade={{true}}
  @backdrop={{true}}
  @backdropClose={{true}}
  @onSubmit={{action "onConfirm"}}
  @onHidden={{action @closeNewDatasourceModal}}
  @renderInPlace={{true}}
  class="new-datasource-modal"
  >

 <span id="ember409" class="modal-title glyphicon glyphicon-cloud-download"></span>


