{{#modal-dialog modal-id="new-datasource-modal" title="New Datasource" header-icon='cloud-download'
   confirm-label="Connect" onConfirm="onConfirm"}}
  <div class="table labelled-inputs">

      <div class="input-label">Host : Port</div>
      <input name="host" placeholder="e.g. http://localhost:5000">

      <div class="input-label">User</div>
      <input name="user" placeholder="Email address">

      <div class="input-label">Password</div>
      <input name="password" type="password">

  </div>
{{/modal-dialog}}
